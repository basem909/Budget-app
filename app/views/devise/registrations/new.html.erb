<div class="categories-contain">
<h1>Sign up</h1>
<% if @minimum_password_length %>
    <em>(minimum password length <%= @minimum_password_length %> characters)</em>
    <% end %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'cat-form') do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3 mg-3">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "field" %>
  </div>

  <div class="mb-3 mg-3">
    <%= f.label :family_name %><br />
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name", class: "field" %>
  </div>

  <div class="mb-3 mg-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="mb-3 mg-3">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="mb-3 mg-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="a-box"><%= render "devise/shared/links" %></div>
</div>