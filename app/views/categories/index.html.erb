<div class="categories-container">
<header class="categories-header">
  <h1 class="categories-title">Categories</h1>
</header>
<section class="categories">
<% @categories.each do |category| %>
  <%=link_to user_category_path(id: category.id) do %>
  <div class="category">
  <img src="<%= category.icon %>" alt="Category Icon" class="icon">
  <h3 class="category-name"><%= category.name %></h3>
  <p class="category-amount"><%= number_to_currency (category.entities.sum(:amount)) or 0 %></p>
  <%= button_to 'Delete', user_category_path(category.id, current_user.id), method: :delete, data: {turbo: false} %>
  </div>
  <% end %>
  <% end %>
</section>
  <div class="link-container"><%= link_to 'New Category', new_user_category_path, class:'new-category' %></div>
</div>